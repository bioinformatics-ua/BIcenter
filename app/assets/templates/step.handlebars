<div id="{{component.name}}" class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">{{component.description}}</h3>
    </div>
    <div class="box-body">
        <form view-element="{{component.shortName}}_form" class="form-horizontal">
        {{#component.componentProperties}}
            {{#ifCond type '==' 'input'}}
                <div class="form-group">
                    <label for="{{id}}" class="col-sm-2 control-label">{{name}}:</label>
                    <div class="col-sm-5">
                        <input class="form-control" name="{{id}}" view-element="{{id}}" value="{{stepProperty.value}}">
                    </div>
                </div>
            {{/ifCond}}
            {{#ifCond type '==' 'number'}}
                <div class="form-group">
                    <label for="{{id}}" class="col-sm-2 control-label">{{name}}</label>
                    <div class="col-sm-5">
                        <input type="number" class="form-control" name="{{id}}" view-element="{{id}}" value="{{stepProperty.value}}">
                    </div>
                </div>
            {{/ifCond}}
            {{#ifCond type '==' 'checkbox'}}
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-5">
                        <div class="checkbox">
                            <label>
                                {{#ifCond stepProperty.value '==' '"on"'}}
                                    <input name="{{id}}" view-element="{{id}}" type="checkbox" checked> {{name}}
                                {{/ifCond}}

                                {{#ifCond stepProperty.value '==' '"off"'}}
                                    <input name="{{id}}" view-element="{{id}}" type="checkbox"> {{name}}
                                {{/ifCond}}
                            </label>
                        </div>
                    </div>
                </div>
            {{/ifCond}}
            {{#ifCond type '==' 'select'}}
            <div class="form-group">
                <label for="{{id}}" class="col-sm-2 control-label">{{name}}:</label>
                <div class="col-sm-5">
                    <select name="{{id}}" view-element="{{id}}" class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">
                        {{#componentMetadatas}}
                            {{#ifCond ../stepProperty.value '==' @index}}
                                <option value="{{@index}}" selected>{{name}}</option>
                            {{/ifCond}}
                            {{#ifCond ../stepProperty.value '!=' @index}}
                                <option value="{{@index}}">{{name}}</option>
                            {{/ifCond}}
                        {{/componentMetadatas}}
                    </select>
                </div>
            </div>
            {{/ifCond}}
            {{#ifCond type '==' 'multi-select'}}
                <div class="form-group">
                    <label for="{{../component.id}}" class="col-sm-2 control-label">{{name}}:</label>
                    <div class="col-sm-5">
                        <select name="{{id}}" view-element="{{id}}" multiple="" class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">

                        </select>
                    </div>
                </div>
            {{/ifCond}}
            {{#ifCond type '==' 'table'}}
                <label>{{name}}:</label>
                <table class="table table-bordered">
                    <tbody view-element="{{../component.id}}">
                    {{#componentMetadatas}}
                        <th>{{name}}</th>
                    {{/componentMetadatas}}
                    </tbody>
                </table>
            {{/ifCond}}
        {{/component.componentProperties}}
        </form>
    </div>
    <div class="box-footer">
        <button view-click="controller.cancelClick()" type="submit" class="btn btn-default">Cancel</button>
        <button view-click="controller.submitClick()" type="submit" class="btn bg-navy margin pull-right">Submit</button>
    </div>
</div>