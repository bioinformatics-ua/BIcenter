<ul class="sidebar-menu" data-widget="tree">
	<div class="sidetoolbar">
		<div class="sidetoolbar-group">
			<button view-click="controller.getComponents();" view-element="componentsBtn"
					class="btn btn-app btn-sidetoolbar">
				<i class="fa fa-wrench"></i>
				Components
			</button>
		</div>
	</div>
</ul>

<ul view-element="components" class="sidebar-menu" data-widget="tree">
	{{#categories}}
		<li class="treeview menu" onclick="this.classList.toggle('menu-open');this.classList.toggle('menu');">
			<a>
				<i class="fa fa-folder"></i> <span>{{name}}</span>
				<span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
        </span>
			</a>
			<ul class="treeview-menu">
				{{#components}}
					<li data-shortname="{{name}}" data-name="{{description}}" style="cursor: pointer;">
						<a>
							<img src="{{image}}"> {{description}}
						</a>
					</li>
				{{/components}}
			</ul>
		</li>
	{{/categories}}
</ul>
