<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">Step Measures</h3>
    </div>

    <div class="box-body">
        <form class="form-horizontal">
            <table view-element="table" class="table table-bordered">
                <thead>
                    <tr>
                    {{#columns}}
                        <th>{{this}}</th>
                    {{/columns}}
                    </tr>
                </thead>
                <tbody>
                {{#data}}
                    <tr>
                        <td>{{stepName}}</td>
                        <td>{{nRecords}}</td>
                        <td>{{read}}</td>
                        <td>{{write}}</td>
                        <td>{{enter}}</td>
                        <td>{{output}}</td>
                        <td>{{update}}</td>
                        <td>{{refuse}}</td>
                        <td>{{error}}</td>
                        <td>{{state}}</td>
                        <td>{{time}}</td>
                        <td>{{speed}}</td>
                        <td>{{priInOut}}</td>
                    </tr>
                {{/data}}
                </tbody>
            </table>
        </form>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <button view-click="controller.cancelClick()" type="submit" class="btn bg-navy margin pull-right">Ok</button>
    </div>
    <!-- /.box-footer -->
</div>