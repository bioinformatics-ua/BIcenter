<form class="form-horizontal">
    <div class="box-body">
        <div class="form-group">
            <label for="rowgen_step_name" class="col-sm-2 control-label">Step Name</label>

            <div class="col-sm-5">
                <input class="form-control" id="rowgen_step_name">
            </div>
        </div>
        <div class="form-group">
            <label for="rowgen_step_limit" class="col-sm-2 control-label">Limit</label>

            <div class="col-sm-5">
                <input type="number" class="form-control" id="rowgen_step_limit">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-5">
                <div class="checkbox">
                    <label>
                        <input id="rowgen_never_ending" type="checkbox"> Never stop generating rows.
                    </label>
                </div>
            </div>
        </div>

        <label>Rows:</label>
        <table class="table table-bordered">
            <tbody id="rowgenerator_table_body">

            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <button id="rowgen_cancel" type="submit" class="btn btn-default">Cancel</button>
        <button id="rowgen_submit" type="submit" class="btn bg-navy margin pull-right">Submit</button>
    </div>
    <!-- /.box-footer -->
</form>