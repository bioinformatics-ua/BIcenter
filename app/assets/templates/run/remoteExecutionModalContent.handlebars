<form view-element="remoteExecution" view-submit="controller.remoteExecution()" class="form-horizontal">
    <div class="form-group">
        <label for="server" class="col-sm-3 control-label">Server Name:</label>
        <div class="col-sm-5">
            <select name="server" view-element="server" class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">
                <option></option>
                {{#servers}}
                    <option value="{{id}}">{{name}}</option>
                {{/servers}}
            </select>
        </div>
    </div>
</form>